<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Resolution_Notes_on_Close</fullName>
    <active>true</active>
    <description>Ensures ticket cannot be closed without resolution notes.</description>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Closed&quot;),
    ISBLANK(Resolution_Notes__c)
)</errorConditionFormula>
    <errorDisplayField>Resolution_Notes__c</errorDisplayField>
    <errorMessage>Resolution Notes are required Before closing a ticket</errorMessage>
</ValidationRule>
